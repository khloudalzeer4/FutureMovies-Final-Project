<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khloud.FutureMovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.khloud.FutureMovies.utils.App"
        android:allowBackup="true"
        android:icon="@drawable/cinema"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cinema"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.khloud.FutureMovies.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.khloud.FutureMovies.ui.MainActivity"
            android:configChanges="orientation|screenSize"/>
    </application>

</manifest>